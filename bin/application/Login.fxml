<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.LoginController" stylesheets="@application.css" alignment="CENTER" spacing="10">
    <Label text="Login to Quiz Application" />
     <HBox alignment="CENTER" spacing="10">
	    <TextField fx:id="usernameField" promptText="Username" prefWidth="250"/>
    </HBox>
    <HBox alignment="CENTER" spacing="10">
	    <PasswordField fx:id="passwordField" promptText="Password" prefWidth="250"/>
    </HBox>
    <Label fx:id="statusLabel" textFill="red" />
    <Button fx:id="loginButton" text="Login" onAction="#handleLogin" prefWidth="250" />
    <Button fx:id="signupButton" text="Signup" onAction="#handleSignup" prefWidth="250" />
</VBox>

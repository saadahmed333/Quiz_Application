<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.SignupController" alignment="CENTER" spacing="10">
    
    <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-padding: 0 0 0 20;">
        <Button fx:id="backButton" text="← Back" onAction="#handleBack" />
    </HBox>
    
    <Label text="Signup for Quiz Application" />
    <HBox alignment="CENTER" spacing="10">
    	<TextField fx:id="usernameField" promptText="Username" prefWidth="250"/>
    </HBox>
    <HBox alignment="CENTER" spacing="10">
	    <PasswordField fx:id="passwordField" promptText="Password" prefWidth="250"/>
    </HBox>
    <HBox alignment="CENTER" spacing="10">
    	<PasswordField fx:id="confirmPasswordField" promptText="Confirm Password" prefWidth="250"/>
    </HBox>
    <Label fx:id="statusLabel" textFill="red" />
    <Button fx:id="signupButton" text="Signup" onAction="#handleSignup" prefWidth="250"/>
</VBox>

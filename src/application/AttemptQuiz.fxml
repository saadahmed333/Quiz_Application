<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox fx:id="questionBox" xmlns:fx="http://javafx.com/fxml" fx:controller="application.AttemptQuizController" alignment="CENTER" spacing="10">
    <Text fx:id="questionText" style="-fx-font-family: Arial; -fx-font-size: 18px;" />
    <RadioButton fx:id="optionA" />
    <RadioButton fx:id="optionB" />
    <RadioButton fx:id="optionC" />
    <RadioButton fx:id="optionD" />
    <Button fx:id="nextButton" text="Next" onAction="#handleNextQuestion" />
    <Button fx:id="finishButton" text="Finish Quiz" onAction="#finishQuiz" visible="false" />
</VBox>
